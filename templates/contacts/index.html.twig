    <div id="about_contacts_2">
        <div class="info">
            <div class="title">Центральный офис</div>
            <div class="address">125315, Москва, Ленинградский проспект, дом 68, строение 24</div>
        </div>
        <div class="map"><div id="about_contacts_1_map"></div></div>
